{
  "expo": {
    "name": "Mova Platform",
    "slug": "mova-platform",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "movaplatform",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to scan QR codes for development purposes.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.movaplatform.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#00242C"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.movaplatform.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#00242C",
          "image": "./src/assets/images/logo/MOVLO.png",
          "imageWidth": 200,
          "hideOnAppLoad": true
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "0ae48420-d0fc-46b6-806a-e5974ad150d5"
      }
    }
  }
}
